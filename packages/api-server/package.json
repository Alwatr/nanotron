{
  "name": "@alwatr/nanotron-api-server",
  "version": "1.2.7",
  "description": "Elegant powerful nodejs server for nanoservice use cases, written in tiny TypeScript module.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "keywords": [
    "server",
    "nanoservice",
    "api",
    "typescript",
    "esm",
    "alwatr"
  ],
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "license": "MIT",
  "files": [
    "**/*.{js,mjs,cjs,map,d.ts,html,md}",
    "!demo/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/nanotron",
    "directory": "packages/api-server"
  },
  "homepage": "https://github.com/Alwatr/nanotron/tree/next/packages/api-server#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/nanotron/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "scripts": {
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "d": "yarn run build:es && DEBUG=1 yarn node",
    "build": "yarn run build:ts & yarn run build:es",
    "build:es": "nano-build --preset=module",
    "build:ts": "tsc --build",
    "watch": "yarn run watch:ts & yarn run watch:es",
    "watch:es": "yarn run build:es --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv dist *.tsbuildinfo"
  },
  "dependencies": {
    "@alwatr/logger": "^3.2.12",
    "@alwatr/math": "^1.3.1"
  },
  "devDependencies": {
    "@alwatr/nano-build": "^1.3.8",
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/tsconfig-base": "^1.2.0",
    "@alwatr/type": "^1.2.4",
    "@alwatr/type-helper": "^1.2.5",
    "@types/node": "^22.5.4",
    "typescript": "^5.5.4"
  }
}
